<h1>Here is the list of all the tasks</h1>

<% @tasks.each do |task| %>
  <div class="card <%= task.completed %>">
   <p>Title : <%=link_to task.title, task_path(task)%></p>
   <p>Completed : <%= task.completed %></p>
   <%= link_to 'Edit the task', edit_task_path(task)%>
   <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
   <p><i class="fas fa-trash"></i></p>
  </div>
<% end %>
<br>
<%= link_to 'Create a new task', task_new_path  %>
